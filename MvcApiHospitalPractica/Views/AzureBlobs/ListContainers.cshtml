@model List<string>
<h1>Azure Storage Container</h1>
<a asp-controller="AzureBlobs" asp-action="CreateContainer" class="btn btn-outline-info">Create Container</a>
<a asp-controller="AzureBlobs" asp-action="CreateContainerPrivate" class="btn btn-outline-info">Create Container Private</a>

@if (Model != null)
{
    <ul class="list-group">
        @foreach (string container in Model)
        {
            <li class="list-group-item">
                @container
                <a asp-controller="AzureBlobs"
           asp-action="ListBlobs"
           asp-route-containername="@container" class="btn btn-info">Blobs</a>

                <a asp-controller="AzureBlobs"
           asp-action="UploadBlob"
           asp-route-containername="@container" class="btn btn-warning">Upload Blob</a>

                <a asp-controller="AzureBlobs"
           asp-action="DeleteContainer"
           asp-route-containername="@container" class="btn btn-danfer">Delete Container</a>


            </li>
        }
    </ul>
}

